<body>
  <div class="quiz-container">
    <div class="question">Qual ano surgiu o col√©gio Silveira da Motta?</div>

    <div class="timer" id="timer">Tempo: 30s</div>

    <div class="answers">
      <button class="answer">1899</button>
      <button class="answer">1908</button> <!-- Resposta correta -->
      <button class="answer">1910</button>
      <button class="answer">1800</button>
      <button class="answer">1937</button>
    </div>

    <div id="dicaContainer">
      <p>‚ú® Dica: Eu estou embaixo do lugar onde voc√™ estuda.</p>
      <input type="text" id="senhaInput" placeholder="Digite a senha aqui" autocomplete="off" />
      <button id="btnVerificar">Verificar</button>
      <div id="mensagemSenha"></div>
    </div>
  </div>

  <script>
    let timeLeft = 30;
    const timerEl = document.getElementById("timer");
    const answers = document.querySelectorAll(".answer");
    const dicaContainer = document.getElementById("dicaContainer");
    const senhaInput = document.getElementById("senhaInput");
    const btnVerificar = document.getElementById("btnVerificar");
    const mensagemSenha = document.getElementById("mensagemSenha");

    let countdown;
    let bloqueado = false;
    let bloqueioSegundos = 0;

    // Fun√ß√£o para bloquear bot√µes
    function bloquearBotoes() {
      answers.forEach((btn) => {
        btn.disabled = true;
        btn.style.opacity = "0.6";
        btn.style.cursor = "not-allowed";
      });
    }

    // Fun√ß√£o para liberar bot√µes
    function liberarBotoes() {
      answers.forEach((btn) => {
        btn.disabled = false;
        btn.style.opacity = "1";
        btn.style.cursor = "pointer";
        btn.style.backgroundColor = ""; // limpa cor do clique anterior
      });
    }

    // Iniciar cron√¥metro principal
    function iniciarContagem() {
      countdown = setInterval(() => {
        if (bloqueado) return; // n√£o diminui se bloqueado

        timeLeft--;
        timerEl.textContent = `Tempo: ${timeLeft}s`;

        if (timeLeft <= 0) {
          clearInterval(countdown);
          timerEl.textContent = "‚è∞ Tempo esgotado!";
          bloquearBotoes();
        }
      }, 1000);
    }

    iniciarContagem();

    // Resposta correta
    const respostaCorreta = "1908";
    const senhaCorreta = "Matem√°tica";

    answers.forEach((btn) => {
      btn.addEventListener("click", () => {
        if (bloqueado) return; // bloqueado n√£o pode clicar

        if (btn.textContent === respostaCorreta) {
          clearInterval(countdown);
          timerEl.textContent = "‚úÖ Resposta correta!";
          btn.style.backgroundColor = "#38d970";
          bloquearBotoes();
          dicaContainer.style.display = "block";
        } else {
          // Errou: bloqueia por 10 segundos
          bloqueado = true;
          bloqueioSegundos = 10;
          bloquearBotoes();
          timerEl.textContent = `‚ùå Errado! Tente novamente em ${bloqueioSegundos}s`;

          // Come√ßa contagem regressiva de bloqueio
          const bloqueioInterval = setInterval(() => {
            bloqueioSegundos--;
            timerEl.textContent = `‚ùå Errado! Tente novamente em ${bloqueioSegundos}s`;

            if (bloqueioSegundos <= 0) {
              clearInterval(bloqueioInterval);
              bloqueado = false;
              liberarBotoes();
              timerEl.textContent = `Tempo: ${timeLeft}s`;
            }
          }, 1000);
        }
      });
    });

    btnVerificar.addEventListener("click", () => {
      const senhaDigitada = senhaInput.value.trim();
      if (senhaDigitada === "") {
        mensagemSenha.textContent = "Por favor, digite a senha.";
        mensagemSenha.style.color = "#ffc107";
        return;
      }

      if (senhaDigitada.toLowerCase() === senhaCorreta.toLowerCase()) {
        mensagemSenha.textContent = "üéâ Parab√©ns! Senha correta.";
        mensagemSenha.style.color = "#38d970";
        senhaInput.disabled = true;
        btnVerificar.disabled = true;
      } else {
        mensagemSenha.textContent = "‚ùå Senha incorreta. Tente novamente.";
        mensagemSenha.style.color = "#d9534f";
      }
    });

    senhaInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        btnVerificar.click();
      }
    });
  </script>
</body>
