      font-weight: bold;
      margin-bottom: 25px;
    }

    .timer {
      font-size: 22px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #ffe066;
    }

    .answers {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-bottom: 30px;
    }

    .answer {
      border: none;
      padding: 22px;
      width: 45%;
      min-width: 140px;
      font-size: 20px;
      border-radius: 12px;
      cursor: pointer;
      transition: transform 0.2s, background-color 0.3s;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      color: white;
    }

    /* Cores dos bot√µes */
    .answer:nth-child(1) {
      background-color: #b9f20d;
    } /* 1899 */
    .answer:nth-child(2) {
      background-color: #65e617;
    } /* 1908 (correta) */
    .answer:nth-child(3) {
      background-color: #d46f2c;
    } /* 1910 */
    .answer:nth-child(4) {
      background-color: #b22222;
    } /* 1800 */
    .answer:nth-child(5) {
      background-color: #00e5ff;
    } /* 1937 */

    .answer:hover {
      transform: scale(1.05);
      filter: brightness(1.1);
    }

